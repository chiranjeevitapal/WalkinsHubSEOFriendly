<script async type="text/javascript">
        $(document).ready(function() {
            /*setTimeout(function() {
                $("#pagedivtop").show();
                $("#pagedivbottom").show();
            }, 15000);*/
            setTimeout(function() {
                $("#subscribeModal").modal('show');
            }, 30000);
            $.ajax({
                url: '/api/similarjobs/<%= walkin.location %>',
                type: 'GET',
                success: function(data) {
                    $.each(data, function(i, obj) {
                        console.log(obj.position)
                        $('#suggestedJobsList').append(
                            '<li class="list-group-item"><a href="/walkin/'+ obj._id +'">' +
                            '<img src="../' + obj.logo + '" class="img-responsive" style="height: 100px;width: 100px; alt="Logo">' +
                            '<b>' + obj.location + '</b> <b>(' + obj.experience + ') - (' + obj.eligibility + ')</b>' +
                            '</a></li>'
                        );
                    });
                },
                error: function(data) {
                    console.log('woops!'); //or whatever
                }
            });
            });
    </script>
