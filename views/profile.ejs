<html>

<head>
    <title>Feedback for walkinshub.com</title>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="../styles.css">
    <script src="../jquery/dist/jquery.min.js"></script>
    <script src="http://cdnjs.cloudflare.com/ajax/libs/jquery.form/3.51/jquery.form.min.js"></script>
    <script src="../bootstrap/dist/js/bootstrap.min.js"></script>

    <link rel="stylesheet" href="../bootstrap/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="../font-awesome/css/font-awesome.min.css">
</head>

<body>
    <nav class="navbar navbar-inverse navbar-fixed-top">
        <div class="container-fluid">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#navigationbar-collapse">
              <span class="sr-only">Toggle navigation</span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
            </button>
            <div class="navbar-header">
                <a class="navbar-brand hvr-underline-from-center" href="/" title="Home"><i class="fa fa-home" aria-hidden="true"></i> Walkins Hub</a>
            </div>

            <div class="collapse navbar-collapse" id="navigationbar-collapse">
                <!--ul class="nav navbar-nav">
                    <li>
                        <a href="/about" class="hvr-underline-from-center" title="About"><i class="fa fa-user" aria-hidden="true"></i> Tutorials</a>
                    </li>
                </ul-->
                <ul class="nav navbar-nav">
                    <li>
                        <a href="/contact" class="hvr-underline-from-center" title="Contact"><i class="fa fa-at" aria-hidden="true"></i> Contact</a>
                    </li>
                </ul>
                <ul class="nav navbar-nav">
                    <li>
                        <a href="/about" class="hvr-underline-from-center" title="About"><i class="fa fa-question-circle" aria-hidden="true"></i> About</a>
                    </li>
                </ul>
                <ul class="nav navbar-nav">
                    <li>
                        <a href="/feedback" class="hvr-underline-from-center" title="Feedback"><i class="fa fa-comment" aria-hidden="true"></i></i> Feedback</a>
                    </li>
                </ul>
                <ul class="nav navbar-nav navbar-right">
                    <% if (user == undefined ) { %>
                        <li class="dropdown" id="notLoggedIn">
                            <a href="#" class="dropdown-toggle hvr-underline-from-center" data-toggle="dropdown"><i class="fa fa-user" aria-hidden="true"></i> Login/Signup <span class="caret"></span></a>
                            <ul class="dropdown-menu">
                                <li class="login-dp">
                                    <div class="row">
                                        <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                                            <a href="/auth/facebook" class="btn btn-primary btn-block"><i class="fa fa-facebook-official"></i> Sign In</a>
                                        </div>
                                    </div>
                                </li>
                            </ul>
                        </li>
                        <% } else{ %>
                            <li class="dropdown" id="loggedIn">
                                <a href="#" class="dropdown-toggle hvr-underline-from-center" data-toggle="dropdown">
                          <img src="https://avatars.io/gravatar/<%= user.facebook.email %>/140" class="profile-image img-circle">
                          <strong id="username"><%= user.facebook.name %></strong>
                          <span class="caret"></span>
                      </a>
                                <ul class="dropdown-menu">
                                    <li>
                                        <div class="navbar-login">
                                            <div class="row">
                                                <div class="col-lg-6">
                                                    <p class="text-center">
                                                        <!--span class="glyphicon glyphicon-user icon-size"></span-->
                                                        <img src="https://avatars.io/gravatar/<%= user.facebook.email %>/140" class="icon-size img-square">
                                                    </p>
                                                </div>
                                                <!--div class="col-lg-6">
                                          <p class="text-left">
                                              <a href="/profile" title="Profile" class="btn btn-info btn-block btn-sm card-1">Profile</a>
                                          </p>
                                      </div-->
                                            </div>
                                        </div>
                                    </li>
                                    <li class="divider"></li>
                                    <li class="login-dp">
                                        <div class="row">
                                            <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                                                <a href="/logout" class="btn btn-primary btn-block"><i class="fa fa-facebook"></i> Sign Out</a>
                                            </div>
                                        </div>
                                    </li>
                                </ul>
                            </li>
                            <% } %>
                </ul>
            </div>
            <!-- /.navbar-collapse -->
        </div>
        <!-- /.container-fluid -->
    </nav>
    <div class="container top-buffer">
        <div class="row">
            <div class="panel panel-info">
                <div class="panel-heading">
                    <h3 class="panel-title">Welcome, <b><%= user.facebook.name %></b></h3>
                </div>
                <div class="panel-body">
                    <div class="row">
                        <div class="col-xs-12 col-sm-12 col-md-3 col-lg-3" align="center"> <img alt="profile-image" src="https://avatars.io/gravatar/<%= user.facebook.email %>/140" class="img-circle img-responsive"> </div>
                        <div class="col-xs-12 col-sm-12 col-md-5 col-lg-5">
                            <ul class="list-group">
                                <li class="list-group-item list-group-item-default">Name<span class="pull-right"><%= user.facebook.name %></span></li>
                                <li class="list-group-item list-group-item-default">Gender<span class="pull-right"><%= user.facebook.gender %></span></li>
                            </ul>
                        </div>
                        <div class="col-xs-12 col-sm-12 col-md-4 col-lg-4">
                            <ul class="list-group">
                                <li class="list-group-item list-group-item-default">Email<span class="pull-right"><%= user.facebook.email %></span></li>
                                <%if (user.get('resume') != undefined && user.get('resume') != '' && user.get('resume') !='undefined') { %>
                                    <li class="list-group-item list-group-item-default">Resume<span class="pull-right"><a href="download/<%= user.get('resume')%>">Your Resume</a></span></li>
                                    <% } else{ %>
                                        <li class="list-group-item list-group-item-default">Resume<span class="pull-right">Not Available</span></li>
                                        <% } %>
                            </ul>
                        </div>
                    </div>
                    <div class="row">
                        <h3 class="text-center">Upload/Update Resume </h3>
                        <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                            <form id="uploadForm" class="well" enctype="multipart/form-data" action="/api/resume %>" method="post">
                                <div class="row">
                                    <div class="col-xs-12 col-sm-12 col-md-2 col-lg-2 col-md-offset-3 col-lg-offset-3">
                                        <input type="file" name="resume" id="fileupload" accept="application/msword" />
                                    </div>
                                    <div class="col-xs-12 col-sm-12 col-md-2 col-lg-2 col-md-offset-3 col-lg-offset-3 top-buffer-small">
                                        <input type="submit" class="btn btn-md btn-primary" value="Upload Resume" name="submit" id="submit">
                                    </div>
                                    <div class="col-xs-12 col-sm-12 col-md-2 col-lg-2 col-md-offset-3 col-lg-offset-3">
                                        <span id="status"></span>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>
    <script src="../profile.js"></script>
    <script>
        $(document).ready(function() {
            $('#uploadForm').submit(function() {
                $("#status").empty().text("File is uploading...");
                $(this).ajaxSubmit({
                    error: function(xhr) {
                        status('Error: ' + xhr.status);
                    },
                    success: function(response) {
                        console.log(response)
                        $("#status").empty().text(response);
                        setTimeout(function(){
                          location.reload();
                        }, 1000);
                    }
                });
                return false;
            });
        });
        $(document).ready(function() {
            $('#submit').bind("click", function() {
                var fileVal = $('#fileupload').val();
                if (fileVal == '') {
                    alert("Please select a file.");
                    return false;
                }
            });
        });
    </script>
</body>

</html>
