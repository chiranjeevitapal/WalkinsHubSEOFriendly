<% include partials/head.ejs %>
<body>
<% include partials/nav.ejs %>
    <section class="main-container">
        <div class="container">
                <div class="row job-listing-row clearfix">
                    <script async src="//pagead2.googlesyndication.com/pagead/js/adsbygoogle.js"></script>
                    <!-- Main page - Top Responsive -->
                    <ins class="adsbygoogle"
                        style="display:block"
                        data-ad-client="ca-pub-5482095998977489"
                        data-ad-slot="6520894053"
                        data-ad-format="auto"></ins>
                    <script>
                    (adsbygoogle = window.adsbygoogle || []).push({});
                    </script>
                </div>
                <div class="row">
                    <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                        <div class="form-inline">
                            <div class="form-group">
                                <input type="text" class="form-control" id="location" placeholder="Location">
                            </div>
                            <button type="submit" class="btn btn-default" onclick="searchByLocation()">Search</button>
                        </div>
                    </div>
                </div>
                <% if (walkins.length > 0) { %>
                <div class="row">
                    <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                        <ul class="dataTable hidden-xs hidden-sm">
                            <div class="tableHeader">
                                <li class="tableRow">
                                    <span>Date</span>
                                    <span>Company</span>
                                    <span>Position</span>
                                    <span>Location</span>
                                    <span>Experience</span>
                                    <span>Details</span>
                                </li>
                            </div>
                            <div class="tableBody">
                                <% walkins.forEach( walkin => { %>
                                    <li class="tableRow">
                                        <span><%= walkin.date %></span>
                                        <span><%= walkin.company %></span>
                                        <span><%= walkin.position %></span>
                                        <span><%= walkin.location.substring(0,15) %></span>
                                        <span><%= walkin.experience %></span>
                                        <span><a href="/walkin/<%= walkin._id %>">Details</a></span>
                                    </li>
                                <% }); %>
                            </div>
                        </ul>
                    </div>
                </div>
                <div class="row hidden-md hidden-lg">
                <% walkins.forEach( walkin => { %>
                    <div class="col-xs-12 col-sm-12">
                        <div class="panel panel-default">
                            <div class="panel-body">
                                <p>Date: <%= walkin.date %></p>
                                <p>Company: <%= walkin.company %></p>
                                <p>Position: <%= walkin.position %></p>
                                <p>Location: <%= walkin.location %></p>
                                <p>Experience: <%= walkin.experience %></p>
                                <p><a href="/walkin/<%= walkin._id %>" class="btn btn-sm btn-primary">Details</a></p>
                            </div>
                        </div>
                    </div>
                <% }); %>
                </div>
                <% } else {  %>
                    <h4>No job information is available right now. Please check back later.</h4>
                <% } %>
            </div>
    </section>
    <% include partials/scripts.ejs %>
</body>
</html>
